{
  "compilerOptions": {
    "target": "ES2019",
    "module": "esnext",
    "sourceMap": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types/"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "baseUrl": "src",
    "noEmit": true
  },
  "include": [
    "src"
  ]
}
